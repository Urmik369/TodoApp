@model TodoApp.Models.TodoItem
@{
ViewData["Title"] = "Delete Task";
}
<div class="card p-4 mx-auto" style="max-width: 400px;">
<h3 class="mb-3 text-danger">Delete Task</h3>
<p>Are you sure you want to delete: <strong>@Model.Title</strong>?</p>
<form asp-action="Delete" method="post">
	@Html.AntiForgeryToken()
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-danger w-100">Delete</button>
</form>
<a asp-action="Index" class="btn btn-secondary w-100 mt-2">Cancel</a>
</div>